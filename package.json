{
  "name": "envkit",
  "version": "0.1.0",
  "description": "Type-safe environment variables with fail-fast validation",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "envkit": "./dist/cli.cjs"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "env",
    "environment",
    "variables",
    "config",
    "validation",
    "typescript",
    "type-safe",
    "dotenv"
  ],
  "author": "Chintan Shah <chintanshah35@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chintanshah35/envkit.git"
  },
  "bugs": {
    "url": "https://github.com/chintanshah35/envkit/issues"
  },
  "homepage": "https://github.com/chintanshah35/envkit#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

